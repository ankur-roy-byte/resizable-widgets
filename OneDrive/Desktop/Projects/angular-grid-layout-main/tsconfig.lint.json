{
    "compilerOptions": {
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015", "es6"],
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "outDir": "./tslint-rules/dist",
        "removeComments": true,
        "strict": true,
        "target": "es5",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "tslint-rules/**/*"
    ]
}
